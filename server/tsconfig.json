{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // Modern Node.js supports ES Modules
    "outDir": "./build",   // Output directory for compiled server code
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["./*.ts"] // Include all .ts files in the server directory
}