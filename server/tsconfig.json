{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // Use CommonJS for Vercel Serverless Functions
    "outDir": "../api",   // Output to root 'api' directory for Vercel
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["./*.ts"] // Include all .ts files in the server directory
}